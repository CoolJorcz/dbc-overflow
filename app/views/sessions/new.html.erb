<h2>Sign In!</h2>

<%= form_for @user, url: start_session_url do |f| %>
	<% if @user.errors.any? %>
		<h2>
			<%= pluralize(@user.errors.count, "error") %>
		</h2>
		<ul>
			<% @user.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
    </ul>
  <% end %>
	<%= f.label :email %>
	<br>
	<%= f.text_field :email %>
	<br>
	<br>
	<%= f.label :password %>
	<br>
	<%= f.password_field :password %>
	<br>
	<br>
	<%= f.submit %>
<% end %>
